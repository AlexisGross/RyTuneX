<Page
    x:Class="RyTuneX.Views.RepairPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">
    <Page.Resources>
        <x:Double x:Key="SettingsCardSpacing">4</x:Double>
        <Style x:Key="SettingsSectionHeaderTextBlockStyle"
               BasedOn="{StaticResource BodyStrongTextBlockStyle}"
               TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="1,30,0,6" />
            </Style.Setters>
        </Style>
    </Page.Resources>
    <Grid x:Name="ContentArea">
        <ScrollViewer Padding="24,14,24,0">
            <StackPanel Margin="0,0,0,38" Spacing="{StaticResource SettingsCardSpacing}">
                <StackPanel CornerRadius="4" Padding="24" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel x:Name="CheckBoxes">
                        <CheckBox x:Name="DismCheckBox" Content="DISM" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed" Margin="0,0,0,10"/>
                        <CheckBox x:Name="SfcCheckBox" Content="SFC" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed" Margin="0,0,0,10"/>
                        <CheckBox x:Name="ChkdskCheckBox" Content="CHKDSK" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed" Margin="0,0,0,10"/>
                    </StackPanel>
                    <Grid>
                        <StackPanel x:Name="ScanRepairPanel" Orientation="Horizontal">
                            <Button x:Name="ScanButton" Content="Scan" Click="OnScanButtonClick" Margin="0,0,10,0"/>
                            <Button x:Name="RepairButton" Content="Repair" Click="OnRepairButtonClick"/>
                        </StackPanel>
                        <Button x:Name="StopButton" Content="Stop" Click="OnStopButtonClick" Visibility="Collapsed"/>
                    </Grid>
                    <Grid x:Name="ProgressGrid" ColumnSpacing="16" Margin="0,6,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ProgressBar x:Name="ProgressBar" Grid.Column="0" Maximum="100" Minimum="0"/>
                        <TextBlock x:Name="PercentageTextBlock" Text="0%" Grid.Column="1" Padding="4,0" Style="{StaticResource CaptionTextBlockStyle}"/>
                    </Grid>
                    <TextBlock x:Name="StatusTextBlock" Text="Select at least one option to scan/repair" Style="{StaticResource CaptionTextBlockStyle}"/>
                </StackPanel>
                <controls:SettingsCard
                    Header="Battery Health"
                    Description="This will generate a complete stat about your battery's health">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xF5FC;"/>
                    </controls:SettingsCard.HeaderIcon>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="BatteryStatusText" Margin="14,0" Style="{StaticResource CaptionTextBlockStyle}" VerticalAlignment="Center"/>
                        <Button Content="Generate" Click="BatteryHealthButton_Click"/>
                    </StackPanel>
                </controls:SettingsCard>
                <controls:SettingsCard
                    Header="Memory Diagnostics"
                    Description="Empty">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE964;"/>
                    </controls:SettingsCard.HeaderIcon>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="MemStatusText" Margin="14,0" Style="{StaticResource CaptionTextBlockStyle}" VerticalAlignment="Center"/>
                        <Button x:Name="MemCheckButton" Content="Diagnose" Click="MemoryHealthButton_Click"/>
                    </StackPanel>
                </controls:SettingsCard>
                <controls:SettingsCard
                    Header="Disk Optimizations"
                    Description="This will optimize your storage device by defraging it (if HDD) or retrimming it (if SSD)">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xEB05;"/>
                    </controls:SettingsCard.HeaderIcon>
                    <Button Content="Optimize"/>
                </controls:SettingsCard>
                <controls:SettingsCard
                    Header="Network Diagnostics"
                    Description="This will check the status of your network connection and diagnose common issues">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE774;"/>
                    </controls:SettingsCard.HeaderIcon>
                    <Button Content="Diagnose"/>
                </controls:SettingsCard>
                <controls:SettingsCard
                    Click="EventViewerSettingsCard_Click"
                    IsClickEnabled="True"
                    Header="Event Viewer"
                    Description="This will display recent system event logs for troubleshooting">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE82D;"/>
                    </controls:SettingsCard.HeaderIcon>
                </controls:SettingsCard>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
